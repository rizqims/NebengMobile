<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="70dp"
    tools:context=".ui.notifications.NotificationsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profilwraplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profil_viewbadag"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/profilwrap"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:id="@+id/profilwrap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/wrapper_profil"
            android:paddingStart="20dp"
            android:paddingTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/namaProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/inter_bold"
                android:text="Asep"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/emailAkun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/namaProfile"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/inter_bold"
                android:text="asepusep@gmail.com"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/noAkun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/emailAkun"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/inter_bold"
                android:text="0896969555"
                android:textSize="16sp" />
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <Button
        android:id="@+id/editbtnn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_btn_logout"
        android:text="Edit Profil"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/profilwraplay"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="10dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/editbtnn"
        android:layout_marginTop="85dp">

        <TextView
            android:id="@+id/pengaturantxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/inter_bold"
            android:text="Pengaturan"
            android:textColor="@color/black"
            android:textSize="20sp" />


        <Button
            android:id="@+id/privasibtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pengaturantxt"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:background="@color/transparent"
            android:drawableLeft="@drawable/ic_baseline_policy_24"
            android:fontFamily="@font/inter_regular"
            android:text="Kebijakan Privasi"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/ketentuanbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/privasibtn"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:background="@color/transparent"
            android:drawableLeft="@drawable/ic_baseline_insert_drive_file_24"
            android:fontFamily="@font/inter_regular"
            android:text="Ketentuan Aplikasi"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/keluarbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ketentuanbtn"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:background="@color/transparent"
            android:drawableLeft="@drawable/ic_baseline_exit_to_app_24"
            android:fontFamily="@font/inter_regular"
            android:text="Keluar"
            android:textAllCaps="false"
            android:textColor="@color/black" />




    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="60dp"
        android:fontFamily="@font/inter_bold"
        android:text="V 0.1"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
